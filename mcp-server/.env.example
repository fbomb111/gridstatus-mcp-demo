# Backend API URL (default: http://localhost:8000)
GRIDSTATUS_API_URL=http://localhost:8000

# Optional: gridstatus.io API key (unlocks 4th tool for stdio transport)
# GRIDSTATUS_API_KEY=your-key-here

# HTTP transport settings
MCP_HTTP_PORT=3000
MCP_ISSUER=http://localhost:3000

# Required in production: secret for OAuth token encryption
# MCP_TOKEN_SECRET=your-secret-here

# Set to "false" to disable OAuth (default: true)
# MCP_REQUIRE_AUTH=false
